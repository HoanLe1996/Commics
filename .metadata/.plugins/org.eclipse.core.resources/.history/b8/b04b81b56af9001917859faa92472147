package com.example.ToDo.di.config;

import java.util.Date;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;

import com.example.ToDo.di.IToDo;
import com.example.ToDo.di.Todo;


@Configuration
@ComponentScan(basePackages = "com.example.ToDo.di")
public class Config {
	
	@Bean  // Bắn ra lỗi NoUniqueBeanDefinitionException
	public IToDo getToDo() { // Lỗi khi tạo bean TODO bởi sự mơ hồ không biết lấy bean được khai báo trong @ Bean và contructor trong lớp TODO
		Todo td = new Todo(0,"Lê Văn Hoan");
		td.setDone(true);
		td.setDueDate(new Date());
		return td;
	}
	
}
